#:kivy 2.3.0
#:import Factory kivy.factory.Factory

<NewsItem>:
    orientation: 'horizontal'
    padding: 10
    spacing: 15
    size_hint: 1, 1
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint_x: 0.4
        padding: 5
        
        AsyncImage:
            source: root.image_source
            fit_mode: 'contain'
            size_hint: 1, 1
            height: self.width * 1 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    BoxLayout:
        size_hint_x: 0.6
        orientation: 'vertical'
        spacing: 8
        padding: 5

        Label:
            text: root.title
            font_size: '36sp'  # Aumentado
            color: 0, 0.4, 0.8, 1
            text_size: self.width, None
            height: self.texture_size[1] * 1.1
            halign: 'left'
            markup: True

        Label:
            text: root.pub_date
            font_size: '28sp'  # Aumentado
            color: 0.5, 0.5, 0.5, 1
            text_size: self.width, None
            height: self.texture_size[1]
            halign: 'left'

        ScrollView:
            bar_width: 8
            effect_cls: 'ScrollEffect'
            
            Label:
                text: root.content
                font_size: '30sp'  # Aumentado
                color: 0.2, 0.2, 0.2, 1
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'left'
                valign: 'top'
                line_height: 1.3

        BoxLayout:
            size_hint_y: None
            height: 150
            padding: 5
            spacing: 5
            
            Label:
                text: '[b]LER NOTÍCIA COMPLETA[/b]'
                markup: True
                font_size: '28sp'  # Aumentado
                color: 0, 0.4, 0.8, 1
                size_hint_x: 0.5
                halign: 'left'
                
            AsyncImage:
                source: root.qr_code
                fit_mode: 'contain'
                size_hint: None, None
                size: 140, 140
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<RootWidget>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        size_hint_y: 0.12
        canvas.before:
            Color:
                rgba: 0, 0.4, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: '[size=38][b]PAINEL DE NOTÍCIAS - FACULDADE DE CIÊNCIAS E TECNOLOGIA[/b][/size]'  # Aumentado
            markup: True
            color: 1, 1, 1, 1
            halign: 'center'
    
    NewsCarousel:
        id: carousel
        size_hint_y: 1
    
    BoxLayout:
        size_hint_y: 0.09
        canvas.before:
            Color:
                rgba: 0, 0.4, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: app.clock_text
            font_size: '32sp'  # Aumentado
            color: 1, 1, 1, 1
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            padding: 10, 0

RootWidget: