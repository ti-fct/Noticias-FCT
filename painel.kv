#:kivy 2.3.0
#:import Factory kivy.factory.Factory

<NewsItem>:
    orientation: 'horizontal'
    padding: '10dp'
    spacing: '15dp'
    size_hint: 1, 1
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Container da Imagem
    BoxLayout:
        size_hint_x: 0.4
        padding: '5dp'
        
        AsyncImage:
            source: root.image_source
            allow_stretch: True
            keep_ratio: True
            size_hint: 1, 1
            height: self.width * 1 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    # Container de Conteúdo
    BoxLayout:
        size_hint_x: 0.6
        orientation: 'vertical'
        spacing: '8dp'
        padding: '5dp'

        # Título
        Label:
            text: root.title
            font_size: '30sp'
            color: 0, 0.4, 0.8, 1
            text_size: self.width, None
            height: self.texture_size[1] * 1.1
            halign: 'left'
            markup: True

        # Data
        Label:
            text: root.pub_date
            font_size: '22sp'
            color: 0.5, 0.5, 0.5, 1
            text_size: self.width, None
            height: self.texture_size[1]
            halign: 'left'

        # Conteúdo
        ScrollView:
            bar_width: '8dp'
            effect_cls: 'ScrollEffect'
            
            Label:
                text: root.content
                font_size: '24sp'
                color: 0.2, 0.2, 0.2, 1
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'left'
                valign: 'top'
                line_height: 1.3

        # Área QR Code
        BoxLayout:
            size_hint_y: None
            height: '150dp'
            padding: '5dp'
            spacing: '5dp'
            
            Label:
                text: '[b]LER NOTÍCIA COMPLETA[/b]'
                markup: True
                font_size: '22sp'
                color: 0, 0.4, 0.8, 1
                size_hint_x: 0.5
                halign: 'left'
                
            AsyncImage:
                source: root.qr_code
                size_hint: None, None
                size: '140dp', '140dp'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<RootWidget>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    # Cabeçalho
    BoxLayout:
        size_hint_y: 0.12
        canvas.before:
            Color:
                rgba: 0, 0.4, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: '[size=32][b]PAINEL DE NOTÍCIAS - FACULDADE DE CIÊNCIAS E TECNOLOGIA[/b][/size]'
            markup: True
            color: 1, 1, 1, 1
            halign: 'center'
    
    # Carrossel
    NewsCarousel:
        id: carousel
        size_hint_y: 1
    
    # Rodapé (Footer)
    BoxLayout:
        size_hint_y: 0.09  # Diminuído para uma barra mais fina
        canvas.before:
            Color:
                rgba: 0, 0.4, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            text: app.clock_text
            font_size: '26sp'
            color: 1, 1, 1, 1
            halign: 'left'
            valign: 'middle'
            padding_x: '10dp'
            markup: True
            text_size: self.size

RootWidget:
